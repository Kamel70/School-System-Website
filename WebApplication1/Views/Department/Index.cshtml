
@{
    ViewData["Title"] = "Index";
}

<div class="m-5">
    <span>You Want to Add New Department? </span>
    <a asp-action="Add" class="btn btn-outline-primary">Add</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Location</th>
            <th scope="col"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (Department dept in Model)
        {
            <tr>
                <th scope="row">@dept.Id</th>
                <td>@dept.Name</td>
                <td>@dept.Description</td>
                <td>@dept.Location</td>
                <td>
                    <a href="/department/details/@dept.Id" class="btn btn-primary">Details</a>
                    <a href="/department/Edit/@dept.Id" class="btn btn-outline-primary">Edit</a>
                    <a class="btn btn-danger" onclick="openDeleteModalForDepartments(@dept.Id)">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this student?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal" onclick="CloseModal()">Cancel</button>
                <a id="confirmDeleteBtn" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

