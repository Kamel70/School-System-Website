@model List<Courses>
@{
    ViewData["Title"] = "AddCourse";
}

<h2 class="form-title">Add Course</h2>
<form method="post" asp-action="AddCourse">
    <div class="mb-3">
        <label>Courses</label>
        <select class="form-select" name="cID">
            @foreach (Courses courses in Model)
            {
                <option value="@courses.Id">@courses.Name</option>
            }
        </select>
    </div>
    <div class="mb-3 text-center">
        <input type="submit" class="btn btn-primary w-50" value="Add">
    </div>

</form>

