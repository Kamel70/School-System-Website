@model WebApplication1.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    SelectList Roles = new SelectList(Model.identityRoles, "Id", "Name");
}

<style>
    .form-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .form-title {
        text-align: center;
        margin-bottom: 20px;
    }
</style>
<div class="m-5 text-center">
    <span>You have an account? </span>
    <a href="/account/login" class="btn btn-outline-primary">Login</a>
</div>
<div class="container">
    <div class="form-container">
        <h2 class="form-title">Register</h2>
        <form method="post" asp-action="Register">
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
            <div class="mb-3">
                <label asp-for="FName" class="control-label"></label>
                <input asp-for="FName" class="form-control" />
                <span asp-validation-for="FName" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmedPassowrd" class="control-label"></label>
                <input asp-for="ConfirmedPassowrd" class="form-control" />
                <span asp-validation-for="ConfirmedPassowrd" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" style="color:red"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RoleID" class="form-label"></label>
                <select class="form-select" asp-for="RoleID" asp-items="Roles">
                </select>
                <span asp-validation-for="RoleID" style="color:red"></span>
            </div>
            <div class="mb-3 text-center">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

